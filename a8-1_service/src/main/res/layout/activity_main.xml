<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/startSer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Service 1" />

        <Button
            android:id="@+id/stopSer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Service 1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/startSer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Service 2" />

        <Button
            android:id="@+id/stopSer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Service 2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bindSer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bind Service 1" />

        <Button
            android:id="@+id/unBindSer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UnBind Service 1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bindSer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bind Service 2" />

        <Button
            android:id="@+id/unBindSer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UnBind Service 2" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/logView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/log"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>

</LinearLayout>
